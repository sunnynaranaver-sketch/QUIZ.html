    let currentIdx = 0;

    function showQuiz() {
        document.getElementById('question-num').innerText = `ë¬¸ì œ ${currentIdx + 1}`;
        document.getElementById('question-text').innerText = quizzes[currentIdx].q;
        document.getElementById('explanation-box').style.display = 'none';
    }

    function checkAnswer(userAns) {
        const correct = quizzes[currentIdx].a;
        const resultText = document.getElementById('result-text');
        if (userAns === correct) {
            resultText.innerText = "âœ… ì •ë‹µì…ë‹ˆë‹¤!";
            resultText.style.color = "green";
        } else {
            resultText.innerText = "âŒ ì•„ì‰¬ì›Œìš”, í‹€ë ¸ìŠµë‹ˆë‹¤.";
            resultText.style.color = "red";
        }
        document.getElementById('desc-text').innerText = quizzes[currentIdx].d;
        document.getElementById('explanation-box').style.display = 'block';
    }

    function nextQuestion() {
        currentIdx++;
        if (currentIdx < quizzes.length) {
            showQuiz();
        } else {
            showBadge();
        }
    }

    function showBadge() {
        document.getElementById('quiz-container').style.display = 'none';
        document.getElementById('badge-screen').style.display = 'block';
        
        // í­ì£½ íš¨ê³¼ (Confetti)
        var duration = 3 * 1000;
        var end = Date.now() + duration;

        (function frame() {
            confetti({ particleCount: 5, angle: 60, spread: 55, origin: { x: 0 } });
            confetti({ particleCount: 5, angle: 120, spread: 55, origin: { x: 1 } });
            if (Date.now() < end) requestAnimationFrame(frame);
        }());
    }

    showQuiz();
